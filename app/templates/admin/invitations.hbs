<h1>Invitations</h1>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Email</th>
      <th class="col-md-1">Delete</th>
    </tr>
  </thead>
  <tbody>
  {{#each model as |invitation|}}
    <tr>
      <th>{{invitation.id}}</th>
      <td>{{invitation.email}}</td>
      <td><button class="btn btn-danger btn-s" {{action 'deleteInvitation' invitation}}>Delete</button></td>
    </tr>

  {{/each}}
  </tbody>
</table>